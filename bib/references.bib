@Article{Jotheri2018,
  author    = {Jotheri, Jaafar},
  journal   = {Water Societies and Technologies from the Past and Present},
  title     = {Recognition {{Criteria}} for {{Canals}} and {{Rivers}} in the {{Mesopotamian}} {{Floodplain}}},
