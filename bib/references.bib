@Article{Rosen.RiveraCollazo2012,
  author    = {Rosen, Arlene M. and Rivera-Collazo, Isabel},
  journal   = {Proceedings of the National Academy of Sciences},
  title     = {Climate change, adaptive cycles, and the persistence of foraging economies during the late {Pleistocene}/{Holocene} transition in the {Levant}},
