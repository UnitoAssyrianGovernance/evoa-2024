  groups     = {ResearchPractice},
  keywords   = {Australia, Colonisation, Lithic technology, Grindstones, Stone axes, Chronology},
  language   = {en},
  shorttitle = {The archaeology, chronology and stratigraphy of {Madjedbebe} ({Malakunanja} {II})},
  url        = {https://www.sciencedirect.com/science/article/pii/S0047248415000846},
  urldate    = {2023-03-01},
}

