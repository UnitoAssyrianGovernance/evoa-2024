  groups     = {GIS Theory},
  keywords   = {Site catchment analysis, Simulation modeling, Environmental impacts, Pastoralism, GIS, Cost-surface modeling},
  shorttitle = {A {GIS} method for assessing the zone of human-environmental impact around archaeological sites},
  url        = {https://www.sciencedirect.com/science/article/pii/S0305440310003705},
