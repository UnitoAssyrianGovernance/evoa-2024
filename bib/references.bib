@Article{Gupta.etal2023,
  author    = {Gupta, Neha and Martindale, Andrew and Supernant, Kisha and Elvidge, Michael},
  journal   = {Advances in Archaeological Practice},
  title     = {The {CARE} {Principles} and the {Reuse}, {Sharing}, and {Curation} of {Indigenous} {Data} in {Canadian} {Archaeology}},
  year      = {2023},
  issn      = {2326-3768},
