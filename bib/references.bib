@InCollection{Leitheiser.etal2022,
  author     = {Leitheiser, Stephen and Vezzoni, Rubén and Hakkarainen, Viola},
  publisher  = {Springer International Publishing},
  title      = {Painting {Outside} the {Lines}: {Transgressing} the {Managerial} {University}, {Avoiding} {Forced} {Creativity}},
  year       = {2022},
